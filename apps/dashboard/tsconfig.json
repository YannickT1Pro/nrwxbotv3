{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom","dom.iterable","esnext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": false,       // <- wichtig, deaktiviert inkrementelles Kompilieren
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./src/*"] },
    "rootDir": "src"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next"]  // <- .next ausschlieÃŸen
}
