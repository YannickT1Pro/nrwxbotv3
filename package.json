{
  "name": "kodari-all-in-one",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:bot": "npm run dev --workspace=apps/bot",
    "dev:dashboard": "npm run dev --workspace=apps/dashboard",
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:dashboard\"",
    "build": "npm run build --workspaces",
    "build:bot": "npm run build --workspace=apps/bot",
    "build:dashboard": "npm run build --workspace=apps/dashboard",
    "start:bot": "npm run start --workspace=apps/bot",
    "start:dashboard": "npm run start --workspace=apps/dashboard",
    "db:generate": "npm run db:generate --workspace=packages/database",
    "db:push": "npm run db:push --workspace=packages/database",
    "db:migrate": "npm run db:migrate --workspace=packages/database",
    "db:studio": "npm run db:studio --workspace=packages/database",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}